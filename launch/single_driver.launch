<?xml version="1.0"?>

<launch>
  <env name="GAZEBO_MODEL_PATH" value="$(find final_project)/models/"/>
  <arg name="id" default="0"/>
  <arg name="base_name" default="iRobot_"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- TODO: Before this file will work we need to add this straight_track world -->
        <arg name="world_name" value="$(find final_project)/worlds/straight_track.world"/>
    </include>


  <!-- TODO: Change spawn location -->
  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" args="-file $(find final_project)/models/irobot/model_full.sdf -sdf -model iRobot -x 1 -y 1 -z 1" ns="$(arg base_name)$(arg id)"/>
  
  <node ns="$(arg base_name)$(arg id)" name="irobotArbiter" pkg="control" type="fp_bh_arbiter" respawn="false" output="screen">
  </node>
  <node ns="$(arg base_name)$(arg id)" name="irobotDrive" pkg="control" type="fp_bh_drive" respawn="false" output="screen">
  </node> 
</launch>
